<div class="container">
  <h1>Tasks</h1>
  <% @tasks.each do |task| %>
    <div class="task">
      <%= link_to "More details", task_path(task) %>
      <%= check_box("task", task.completed, {
        checked: task.completed,
        class: 'task__completed'
      }) %>
    </div>
  <% end %>
</div>
